{% extends 'base-back-office.html.twig' %}

{% block title %}Aliment index{% endblock %}

{% block mainContent %}
    <h1>Aliment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Categorie</th>
                <th>Calories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aliment in aliments %}
            <tr>
                <td>{{ aliment.id }}</td>
                <td>{{ aliment.name }}</td>
                <td>{{ aliment.categorie }}</td>
                <td>{{ aliment.calories }}</td>
                <td>
                    <a href="{{ path('aliment_crud_show', {'id': aliment.id}) }}">show</a>
                    <a href="{{ path('aliment_crud_edit', {'id': aliment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('aliment_crud_new') }}">Create new</a>
{% endblock %}
