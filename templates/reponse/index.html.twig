{% extends 'base-back-office.html.twig' %}

{% block mainContent %}
    <h1 style="color:orange">liste des reponses </h1>

    <table class="table" style="color:white;">
        <thead>

        <tr>
            <th>type reclamation</th>
            <th>Email</th>
            <th>message de reclamation</th>
            <th>Date reclamation</th>
            <th>reponse</th>
            <th>repondre</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.type }}</td>
                <td>{{ reponse.email }}</td>
                <td>{{ reponse.message }}</td>
                <td>{{ reponse.date ? reponse.date|date('Y-m-d') : '' }}</td>
                <td>{{ reponse.reponse }}</td>
                <td>
                    {% if reponse.reponse == null %}
                        <a class="btn btn-outline-warning" href="{{ path('reponse_new', {'id': reponse.recId}) }}">repondre</a>
                    {% else %}
                        <a class="btn btn-outline-warning" href="{{ path('reponse_edit', {'id': reponse.recId}) }}">modifier</a>
                    {% endif %}
                </td>
                <td>
                    {% if reponse.repp == null %}
                        <a class="btn btn-outline-danger">pas de r√©ponse</a>
                    {% else %}
                        <form method="post" action="{{ path('reponse_delete', {'id': reponse.repp}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.repp) }}">
                            <button class="btn btn-warning">Delete</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

