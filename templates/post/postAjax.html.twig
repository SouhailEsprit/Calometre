{% for post in posts %}
    <tr>
        <td>{{ post.id }}</td>
        <td>{{ post.name }}</td>
        <td>{{ post.creationDate }}</td>
        <td>{{ post.description }}</td>
        <td>{{ post.event.nom }}</td>
        <td>
            <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
            <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="5">no records found</td>
    </tr>
{% endfor %}