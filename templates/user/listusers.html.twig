{% block mainContent %}


	<main id="main" class="main"> <div class="pagetitle">
		<h1>General Tables</h1>
		<nav>
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="index.html">Home</a>
				</li>
				<li class="breadcrumb-item">Tables</li>
				<li class="breadcrumb-item active">General</li>
			</ol>
		</nav>
	</div>
	<!-- End Page Title -->

	<section class="section">
		<div class="row">

			<div class="col-lg-6"></div>

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Table Users</h5>
					<hr>
					<a href="{{ path('users_list_recherche') }}" button class="btn btn-dark">Search</a>
					<hr>
					<!-- Table with hoverable rows -->
					<table class="table table-hover">
						<thead>
							<tr>
								<th>ID</th>

								<th>Nom</th>
								<th>Prénom</th>
								<th>E-mail</th>
								<th>Numéro de télephone</th>
								<th>Role</th>
								<th>Photo de profile
								</th>
								<th>État de vérification</th>
								<th>Ban</th>
								<th>Statut de ban</th>
							</tr>
						</thead>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}

						<tr>
							<td>{{ user.id }}</td>

							<td>{{ user.lastname }}</td>
							<td>{{ user.firstname }}</td>

							<td>{{ user.email }}</td>
							<td>{{ user.phonenumber }}</td>
							<td>{{ user.roles|join(', ') }}</td>
							<td>
								<div class="img-area" style="width:0%">

									<img src="{{ asset('uploads/profilePicture/' ~ user.ProfilePicture) }}" width="60" height="60" alt="icon">
								</div>
							</td>

							<td>


								<p>
									{% if user.isVerified == '0' %}
										<p style="color:red;">Non vérifié.</p>

									{% else %}
										<p style="color:green;">Vérifiée.</p>
									{% endif %}
								</p>
							</td>
							<td class="text-center">
								<a href="{{ path('ban_user',{'id':user.id}) }}" type="button" class="btn btn-danger ">
									<i class="mdi mdi-lock-outline btn-icon-prepend" style="color: white"></i>
									Ban</a>
							</td>
							<td>
								<p>
									{% if user.isbanned == '1' %}
										<p style="color:red;">ban.</p>
									{% else %}
										<p style="color:green;">pas de ban.</p>
									{% endif %}
								</p>
							</td>
						</tr>
					</tbody>
				</tbody>
			</tr>
		</a>
		<p></p>
	</tbody>
</tbody>{% endfor %}</table>{{ pagerfanta(users) }}<!-- End Table with hoverable rows --></div></div></div></div></section></main><!-- End #main --></body> {% endblock %}
