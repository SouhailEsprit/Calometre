{% extends 'base-back-office.html.twig' %}


{% block mainContent %}
<main id="main" class="main">

    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ event.nom }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ event.dateFin ? event.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>NombreParticipants</th>
                <td>{{ event.nombreParticipants }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.lieu }}</td>
                <td>
                    <img src="{{ asset('uploads/Event_images/' ~ event.image) }}"/>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}" button class="btn btn-dark">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}" button class="'btn btn-warning">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
