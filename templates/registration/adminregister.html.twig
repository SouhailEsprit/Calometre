{% block mainContent %}
    <body>

    <main>
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="d-flex justify-content-center py-4">
                                <a href="index.html" class="logo d-flex align-items-center w-auto">
                                    <img src="{{ asset('back-office/assets/img/logo.png') }}" alt="">
                                    <span class="d-none d-lg-block">NiceAdmin</span>
                                </a>
                            </div><!-- End Logo -->

                            <div class="card mb-3">

                                <div class="card-body">

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                                        <p class="text-center small">Enter your personal details to create account</p>
                                    </div>

                                    {{ form_start(AdminRegistration) }}
                                        <div class="col-12">

                                            {{ form_row(AdminRegistration.firstname,{'attr':{'class':'form-control'}},{label: 'Password'}) }}
                                            <div class="invalid-feedback">Please, enter your name!</div>
                                        </div>
                                    <div class="col-12">

                                        {{ form_row(AdminRegistration.lastname,{'attr':{'class':'form-control'}}) }}
                                        <div class="invalid-feedback">Please, enter your name!</div>
                                    </div>
                                    <div class="col-12">
                                        {{ form_row(AdminRegistration.email,{'attr':{'class':'form-control'}}) }}
                                        <div class="invalid-feedback">Please enter a valid Email address!</div>
                                    </div>
                                    <div class="col-12">

                                        {{ form_row(AdminRegistration.plainPassword,{'attr':{'class':'form-control'}}, {label: 'Password'} ) }}
                                        <div class="invalid-feedback">Please, enter your name!</div>
                                    </div>
                                    <div class="col-12">


                                        {{ form_row(AdminRegistration.countryCode,{'attr':{'class':'form-control'}})}}
                                        <div class="invalid-feedback">Please, enter your name!</div>
                                    </div>
                                    <div class="col-12">

                                        {{ form_row(AdminRegistration.phonenumber,{'attr':{'class':'form-control'}}) }}

                                        <div class="invalid-feedback">Please, enter your name!</div>
                                    </div>

                                    <div class="col-12">

                                        {{ form_row(AdminRegistration.profile_picture,{'attr':{'class':'form-control'}}) }}
                                        <div class="invalid-feedback">Please, enter your name!</div>
                                    </div>
                                    <div class="col-12">

                                        {{ form_row(AdminRegistration.agreeTerms) }}
                                        <div class="invalid-feedback">Please, enter your name!</div>


