{#                                            </div>#}
{#                                        </div>#}
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Create Account</button>
                                        </div>
                                        <div class="col-12">
                                            <p class="small mb-0">Already have an account? <a href="{{path('admin_login')}}">Log in</a></p>
                                        </div>
                                    {{ form_end(AdminRegistration) }}

                                </div>
                            </div>
                            </div>

