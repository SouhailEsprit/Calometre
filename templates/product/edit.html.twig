{% extends 'base-back-office.html.twig' %}


{% block mainContent %}
	<main id="main" class="main">

	<div class="pagetitle">
		<h1>Carousel</h1>
		<nav>
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="{{path('edit_admin')}}">Admin</a></li>
				<li class="breadcrumb-item active"><a href="{{path('product_index')}}">Products</a></li>

			</ol>
		</nav>
	</div><!-- End Page Title -->

	<h1>Edit Product</h1>
	{{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
	<table class="table">
		<tbody>

		<tr>
			{{ form_row(form.name,{'attr':{'class':'form-control', 'placeholder': "Product Name"}}) }}
		</tr>
		<tr>
			{{ form_row(form.price,{'attr':{'class':'form-control', 'placeholder': "Product Price"}}) }}
		</tr>
		<tr>
			{{ form_row(form.description,{'attr':{'class':'form-control', 'placeholder': "About..."}}) }}
		</tr>
		<tr>
			{{ form_row(form.quantity,{'attr':{'class':'form-control', 'placeholder': "Product Quantity"}}) }}
		</tr>
		<tr>
			{{ form_row(form.category,{'attr':{'class':'form-label' ,'class':'form-select'}}) }}
		</tr>
		<tr>
			{{ form_row(form.images,{'attr':{'class':'form-label','class':'form-control' }}) }}
		</tr>


		{# ********images********** #}
		</tbody>
	</table>

	<div style="text-align: -webkit-center;">
		<div style="width: max-content;">

			<img src="{{ asset('/uploads/products/' ~ product.image) }}" class="d-block w-100" alt="...">
		</div>






		<form method="post" action="{{ path('product_delete', {'id': product.id}) }}", button class="btn btn-danger" onsubmit="return confirm('Are you sure you want to delete this item?');">
			{{ form_start(form) }}
			{{ form_widget(form) }}
			<button class="btn btn-success">{{ button_label|default('Update') }}</button>
			{{ form_end(form) }}
			<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">

			<button class="btn btn-danger">Delete</button>

		</form>
		<a href="{{ path('product_index') }}",  button class="btn btn-dark" >Back to list</a>
	</div>



	{{ form_end(form) }}
{% endblock %}