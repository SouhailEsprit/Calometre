                </ul>
                {# search #}

                {# food #}

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="ongoing" role="tabpanel" aria-labelledby="ongoing-tab">

                        <div class="row">
                            <div class="col-12">
                                <div class="single-item">
                                    <div class="left-item">
                                        <div class="logo-item">


                                            <img style="border: 5px solid #555;" src="{{ asset('/uploads/products/' ~ product.image) }}" class="d-block w-100" alt="icon">


                                        </div>
