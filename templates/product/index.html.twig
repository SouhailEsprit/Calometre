
{% extends 'base-back-office.html.twig' %}
 
 

{% block mainContent %}


    <h1>Product index</h1>

<table class="table"> 

            {% for product in products %}
            
 <tr>
    
            
    <div class="pos-content">
	<div class="pos-content-container h-100 p-3" data-scrollbar="true" data-height="100%">
	<div class="row gx-5">
	<div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 pb-3">
	<div class="card h-100">
	<div class="card-body h-100 p-1">
	<div class="pos-product">
	<div class="carousel-inner">
   
			<img src="{{ asset('/uploads/products/' ~ product.image) }}" class="d-block w-100" alt="...">

			
    </div>
	<div class="info">
	<div class="title text-truncate">{{ product.name }}&reg;</div>
	<div class="desc text-truncate">{{ product.price }}</div>
    <div class="desc text-truncate">{{ product.description }}</div>
    
	
	<div class="w-100px">Stock:{{ product.quantity }}</div>
	
	
	
	
	<div class="d-flex align-items-center mb-3">
	<div class="w-100px">Availability:</div>
	<div class="flex-1">
	<div class="form-check form-switch">
	<input class="form-check-input" type="checkbox" name="qty" id="product1" checked value="0" />
	<label class="form-check-label" for="product1"></label>
	</div>
	</div>
	</div>
	     <a href="{{ path('product_edit', {'id': product.id}) }}", button class="btn btn-warning">edit</a>
         <form method="post" action="{{ path('product_delete', {'id': product.id}) }}", onsubmit="return confirm('Are you sure you want to delete this item?');">
         <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
         <button class="btn btn-danger" >Delete</button>
        </form>
	</div>
	</div>
	</div>
    
    </tr>     
                {% endfor %}
    </table>


{% endblock %}


