{% extends 'base-back-office.html.twig' %}

{% block title %}Recette index{% endblock %}

{% block mainContent %}
    <h1>Recette index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Categorie</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.name }}</td>
                <td>{{ recette.categorie }}</td>
                <td>
                    <a href="{{ path('recette_crud_show', {'id': recette.id}) }}">show</a>
                    <a href="{{ path('recette_crud_edit', {'id': recette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recette_crud_new') }}">Create new</a>
{% endblock %}
